<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ContainerView">
        <!-- spacing between lines vertically -->
        <attr name="lineSpacing" format="dimension"/>
        <!-- spacing between items horizontally-->
        <attr name="itemSpacing" format="dimension"/>
        <!-- enable lazy loading, lore partially for scrollView, default is false -->
        <attr name="enableLazyLoading" format="boolean" />
        <!-- with lazy loading enabled, init load item count -->
        <attr name="initLazyLoadItemSize" format="integer" />
        <attr name="lazyLoadMoreItemSize" format="integer" />
        <!-- load more text, "More..." as default -->
        <attr name="loadMoreText" format="string" />
        <!-- Content Alignment -->
        <attr name="contentAlignment" format="enum" >
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>
    </declare-styleable>
</resources>